@model CreateGroupViewModel

<form asp-controller="Group" asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Group.Name" />
        <input class="form-control" asp-for="Group.Name" placeholder="Group Name">
        <small class="form-text text-muted">Test</small>
    </div>
    <div class="form-group">
        <label asp-for="Group.MOTD" />
        <input class="form-control" asp-for="Group.MOTD" placeholder="Description">
        <small class="form-text text-muted">123</small>
    </div>
    <div class="form-group">
        <label asp-for="Image" />
        <input type="file" accept=".jpg, .png" class="form-control" asp-for="Image">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>