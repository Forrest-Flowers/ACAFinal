@model Group

<div>
    <h2>@Model.Name</h2>
    <h3>@Model.MOTD</h3>
</div>

<div class="text-center">
    <ul class="list-group">
        @foreach (Event e in Model.Events)
        {
            <li class="list-group-item">@e.Description, @e.DayOfEvent</li>

        }
    </ul>
    <a class="btn btn-primary" asp-controller="event" asp-route-id="@Model.Id" asp-action="create">Schedule an Event</a>
</div>
