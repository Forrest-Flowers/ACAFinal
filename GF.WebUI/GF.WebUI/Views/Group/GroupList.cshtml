@model ICollection<Group>


@if (Model.Count == 0)
{
    <div class="text-center">
        <div class="alert alert-secondary">
            There are no groups here!
        </div>
    </div>
}
else
{
    <div class="listcontainer">
        <table id="groups" class="display">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Group g in Model)
                {
                    <tr>
                        <td>
                            <img src="@g.ImageURL" class="groupimage" />
                        </td>
                        <td>@g.Name</td>
                        <td>@g.MOTD</td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
}
