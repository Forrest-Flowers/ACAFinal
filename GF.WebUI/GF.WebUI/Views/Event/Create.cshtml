@model Event

<h2>Create Event</h2>

<div class="text-center">
<form asp-controller="Event" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Description" />
        <input class="form-control" asp-for="Description" placeholder="Description">
    </div>

    <div class="form-group">
        <label asp-for="DayOfEvent" />
        <input class="form-control" asp-for="DayOfEvent" placeholder="MM/dd/yyyy">
    </div>

    <input class="hidden" asp-for="GroupId"/>

    <button type="submit" class="btn btn-primary">Create Event</button>
</form>
</div>
